{
  "variables": {
    "PROVISIONER": ""
  },
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks6-x86_64.cfg<enter>"
      ],
      "boot_wait": "5s",
      "disk_interface": "virtio-scsi",
      "disk_size": 5000,
      "disk_cache": "unsafe",
      "disk_discard": "unmap",
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "4ed6c56d365bd3ab12cd88b8a480f4a62e7c66d2",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirror.yandex.ru/centos/6/isos/x86_64/CentOS-6.6-x86_64-minimal.iso",
      "net_device": "virtio-net",
      "output_directory": "output/centos-6-x86_64-qemu/",
      "machine_type": "pc-i440fx-1.7",
      "qemuargs": [
        [
          "-m",
          "1024"
        ]
      ],
      "shutdown_command": "shutdown -h now",
      "ssh_password": "packer",
      "ssh_username": "root",
      "ssh_wait_timeout": "1200s",
      "type": "qemu",
      "vm_name": "centos-6-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/reboot.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/cloudinit.sh",
        "scripts/cleanup.sh"
      ],
      "environment_vars": [
         "PROVISIONER={{user `PROVISIONER`}}"
      ],
      "pause_before": "30s",
      "type": "shell"
    },
    {
      "type": "file",
      "source": "files/80-hotplug-cpu-mem.rules",
      "destination": "/etc/udev/rules.d/80-hotplug-cpu-mem.rules"
    }
  ],
  "post-processors": [
    [
      {
        "type": "compress",
        "format": "bgzf",
        "metadata": true,
        "output": "output/centos-6-x86_64-compress/"
      },
      {
        "type": "checksum",
        "output": "output/centos-6-x86_64-compress/"
      }
    ]
  ]
}
