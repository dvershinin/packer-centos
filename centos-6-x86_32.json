{
  "variables": {
    "PROVISIONER": ""
  },
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks6-x86_32.cfg<enter>"
      ],
      "boot_wait": "5s",
      "disk_interface": "scsi",
      "disk_size": 5000,
      "disk_cache": "unsafe",
      "disk_discard": "unmap",
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "8c14c9a379aa7c7477471938ca06447d",
      "iso_checksum_type": "md5",
      "iso_url": "http://mirror.yandex.ru/centos/6/isos/i386/CentOS-6.6-i386-minimal.iso",
      "net_device": "virtio-net",
      "output_directory": "output/centos-6-x86_32-qemu/",
      "machine_type": "pc-i440fx-1.7",
      "qemuargs": [
        [
          "-m",
          "1024"
        ],
        [
          "-device",
          "virtio-scsi-pci,id=scsi0"
        ],
        [
          "-drive",
          "if=none,cache=unsafe,id=drive0,discard=unmap,file=output/centos-6-x86_32-qemu/centos-6-x86_32"
        ],
        [
          "-device",
          "scsi-hd,bus=scsi0.0,drive=drive0"
        ],
        [
          "-device",
          "virtio-net,netdev=user.0"
        ]
      ],
      "shutdown_command": "shutdown -h now",
      "ssh_password": "packer",
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "centos-6-x86_32"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/reboot.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/cloudinit.sh",
        "scripts/cleanup.sh"
      ],
      "environment_vars": [
        "PROVISIONER={{user `PROVISIONER`}}"
      ],
      "pause_before": "30s",
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "type": "compress",
        "format": "bgzf",
        "output": "output/centos-6-x86_32-compress/"
      },
      {
        "type": "checksum",
        "output": "output/centos-6-x86_32-compress/"
      }
    ]
  ]
}
