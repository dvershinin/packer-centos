{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks7.cfg<enter>"
      ],
      "boot_wait": "10s",
      "disk_interface": "scsi",
      "disk_size": 5000,
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "e5a2c3c6d245b17e8d6ae2c31d2f34b62c273a0e",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirror.yandex.ru/centos/7/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
      "net_device": "virtio-net",
      "output_directory": "output/centos-7-x86_64-qemu/",
      "qemuargs": [
        [
          "-m",
          "768m"
        ],
        [
          "-device",
          "virtio-scsi-pci,id=scsi0"
        ],
        [
          "-drive",
          "if=none,cache=unsafe,id=drive0,discard=unmap,file=output/centos-7-x86_64-qemu/centos-7-x86_64.raw"
        ],
        [
          "-device",
          "scsi-hd,bus=scsi0.0,drive=drive0"
        ],
        [
          "-device",
          "virtio-net,netdev=user.0"
        ]
      ],
      "shutdown_command": "shutdown -h now",
      "ssh_password": "build",
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "centos-7-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "type": "strip",
      "keep_input_artifact": false,
      "output": "output/centos-7-x86_64-strip/"
    },
    {
      "type": "compress",
      "format": "gzip",
      "keep_input_artifact": false,
      "output": "output/centos-7-x86_64-compress/"
    }
  ]
}
