{
  "variables": {
    "PROVISIONER": ""
  },
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks7.cfg<enter>"
      ],
      "boot_wait": "5s",
      "disk_interface": "scsi",
      "disk_size": 5000,
      "disk_cache": "unsafe",
      "disk_discard": "unmap",
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "e5a2c3c6d245b17e8d6ae2c31d2f34b62c273a0e",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirror.yandex.ru/centos/7/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
      "net_device": "virtio-net",
      "output_directory": "output/centos-7-x86_64-qemu/",
      "machine_type": "pc-i440fx-1.7",
      "qemuargs": [
        [
          "-m",
          "1024"
        ]
      ],
      "shutdown_command": "shutdown -h now",
      "ssh_password": "packer",
      "ssh_username": "root",
      "ssh_wait_timeout": "1200s",
      "type": "qemu",
      "vm_name": "centos-7-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/reboot.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/cloudinit.sh",
        "scripts/cleanup.sh"
      ],
      "environment_vars": [
        "PROVISIONER={{user `PROVISIONER`}}"
      ],
      "pause_before": "30s",
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "type": "compress",
        "format": "bgzf",
        "output": "output/centos-7-x86_64-compress/"
      },
      {
        "type": "checksum",
        "output": "output/centos-7-x86_64-compress/"
      }
    ]
  ]
}
